{
  "name": "nestjs-http-promise",
  "version": "1.2.1",
  "keywords": [
    "nestjs",
    "http",
    "promise",
    "retry",
    "retries",
    "axios"
  ],
  "description": "promise implementation of nestjs http module with retries feature using axios-retry and axios",
  "author": "Ben Hason",
  "license": "MIT",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "url": "https://github.com/benhason1/nestjs-http-promise#readme",
  "scripts": {
    "build": "rimraf -rf dist && tsc -p tsconfig.json",
    "format": "prettier --write \"{lib}/**/*.ts\"",
    "lint": "eslint 'lib/**/*.ts' --fix",
    "prepublish:npm": "npm run build",
    "publish:npm": "npm publish --access public",
    "publish:beta": "npm publish --access public --tag beta",
    "prepublish:beta": "npm run build"
  },
  "dependencies": {
    "axios": "~0.24.0",
    "axios-better-stacktrace": "^2.1.2",
    "axios-retry": "^3.2.4"
  },
  "devDependencies": {
    "@nestjs/common": "^8.1.2",
    "@nestjs/core": "^8.1.2",
    "@nestjs/platform-express": "^8.1.2",
    "@types/node": "^14.17.32",
    "@typescript-eslint/eslint-plugin": "^4.33.0",
    "@typescript-eslint/parser": "^4.33.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.25.2",
    "husky": "^7.0.4",
    "lint-staged": "^11.2.6",
    "prettier": "^2.4.1",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2",
    "typescript": "^4.4.4"
  },
  "peerDependencies": {
    "@nestjs/common": "^7.0.0 || ^8.0.0",
    "reflect-metadata": "^0.1.12"
  },
  "lint-staged": {
    "*.ts": [
      "prettier --write"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/benhason1/nestjs-http-promise"
  }
}
