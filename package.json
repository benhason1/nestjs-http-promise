{
  "name": "nestjs-http-promise",
  "version": "4.0.0",
  "keywords": [
    "nestjs",
    "http",
    "promise",
    "retry",
    "retries",
    "axios"
  ],
  "description": "promise implementation of nestjs http module with retries feature using axios-retry and axios",
  "author": "Ben Hason",
  "license": "MIT",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "url": "https://github.com/benhason1/nestjs-http-promise#readme",
  "scripts": {
    "build": "rimraf -rf dist && tsc -p tsconfig.json",
    "format": "prettier --write \"{lib}/**/*.ts\"",
    "lint": "eslint 'lib/**/*.ts' --fix",
    "test": "vitest",
    "prepare": "npm run build",
    "prepublish:npm": "npm run build",
    "publish:npm": "npm publish --access public",
    "publish:beta": "npm publish --access public --tag beta",
    "prepublish:beta": "npm run build"
  },
  "dependencies": {
    "axios-retry": "^3.3.1"
  },
  "devDependencies": {
    "@nestjs/common": "^10.0.0",
    "@nestjs/core": "^10.0.0",
    "@nestjs/platform-express": "^10.0.0",
    "@nestjs/testing": "^10.4.6",
    "@types/node": "^18.19.64",
    "@typescript-eslint/eslint-plugin": "^4.33.0",
    "@typescript-eslint/parser": "^4.33.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.26.0",
    "husky": "^7.0.4",
    "lint-staged": "^11.2.6",
    "prettier": "^2.6.2",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2",
    "typescript": "^5.6.3",
    "vitest": "^2.1.4"
  },
  "peerDependencies": {
    "@nestjs/common": "^7.0.0 || ^8.0.0 || ^9.0.0 || ^10.0.0",
    "axios": "^1.3.0",
    "reflect-metadata": "^0.1.12"
  },
  "lint-staged": {
    "*.ts": [
      "prettier --write"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/benhason1/nestjs-http-promise"
  }
}
